<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BikePathQuality" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorNightPrimary</item>
        <item name="colorPrimaryVariant">@color/colorNightPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorNightOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorNightSecondary</item>
        <item name="colorSecondaryVariant">@color/colorNightSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorNightOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorNightStatusBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BikePathQuality.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BikePathQuality.Background">
        <item name="android:background">@drawable/main_header_selector_night</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Headline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="ThemeOverlay.BikePathQuality.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>