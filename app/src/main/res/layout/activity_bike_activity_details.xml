<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.BikeActivityDetailsActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        mapbox:mapbox_cameraTargetLat="52.5162746"
        mapbox:mapbox_cameraTargetLng="13.3777041"
        mapbox:mapbox_cameraZoom="15" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Theme.BikePathQuality.ActionBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@id/rvActivityDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mapView">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/AppTheme.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@string/bike_activity'
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/check"
            android:gravity="center_vertical"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_baseline_check_circle_outline_24"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/tvTitle"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:tint="@color/green_500" />

        <TextView
            android:id="@+id/tvUploaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text='@string/action_uploaded'
            android:textColor="@color/green_500"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/ivCheck"
            app:layout_constraintTop_toTopOf="@id/tvTitle" />

        <ImageView
            android:id="@+id/ivBike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/bike"
            android:gravity="center_vertical"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/ic_baseline_pedal_bike_24"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:tint="@color/grey_500" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_start_time"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/ivBike"
            app:layout_constraintStart_toEndOf="@id/ivBike"
            app:layout_constraintTop_toTopOf="@id/ivBike" />

        <TextView
            android:id="@+id/tvDelimiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/delimiter_dash"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/ivBike"
            app:layout_constraintStart_toEndOf="@id/tvStartTime"
            app:layout_constraintTop_toTopOf="@id/ivBike" />

        <TextView
            android:id="@+id/tvStopTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_stop_time"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/ivBike"
            app:layout_constraintStart_toEndOf="@id/tvDelimiter"
            app:layout_constraintTop_toTopOf="@id/ivBike" />

        <Spinner
            android:id="@+id/spSurfaceType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBike" />

        <Spinner
            android:id="@+id/spSmoothnessType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@id/spSurfaceType" />

        <ImageView
            android:id="@+id/ivWatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:contentDescription="@string/duration"
            android:gravity="center_vertical"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/ic_outline_watch_later_24"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/spSurfaceType"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/tvLabelDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@id/ivWatch"
            app:layout_constraintStart_toEndOf="@id/ivWatch"
            app:layout_constraintTop_toTopOf="@id/ivWatch" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_duration"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@id/ivWatch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivWatch" />

        <ImageView
            android:id="@+id/ivList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/details"
            android:gravity="center_vertical"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/ic_baseline_list_24"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/ivWatch"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/tvLabelDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@id/ivList"
            app:layout_constraintStart_toEndOf="@id/ivList"
            app:layout_constraintTop_toTopOf="@id/ivList" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_details"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@id/ivList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivList" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvActivityDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clDescription"
        tools:listitem="@layout/bike_activity_details_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="?attr/colorPrimary"
        android:contentDescription="@string/action_upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_outline_cloud_upload_24"
        app:tint="?attr/colorOnPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>